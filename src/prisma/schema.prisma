datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "generated/client"
}

model StoreConfig {
  id        String      @id @default(uuid())
  name      String
  theme     Theme
  domain    String      @unique
  languages  String[]
  default_language String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

enum Theme {
    BASIC
    MIDDLE
    ADVANCED
}