datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "generated/client"
}

model StoreConfig {
  id               String   @id @default(uuid())
  name             String
  theme            Theme
  domain           String   @unique
  languages        String[]
  default_language String
  updatedAt        DateTime @updatedAt
  createdAt        DateTime @default(now())
  Store            Store[]
}

model Store {
  id       String    @id @default(uuid())
  language String
  products Product[]
  content  String

  store_config    StoreConfig @relation(fields: [store_config_id], references: [id])
  store_config_id String
}

model Product {
  id    String  @id @default(uuid())
  name  String
  price Decimal

  store    Store  @relation(fields: [store_id], references: [id])
  store_id String
}

enum Theme {
  BASIC
  MIDDLE
  ADVANCED
}
